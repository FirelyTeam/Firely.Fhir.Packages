<Project Sdk="Microsoft.NET.Sdk">


  <Import Project="..\Firely.Fhir.Packages.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="SharpZipLib" Version="1.1.0" />
    <PackageReference Include="SemanticVersioning" Version="1.2.0" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.2" />
  </ItemGroup>

	<ItemGroup>
		<PackageReference Include="Hl7.FhirPath" Version="2.0.0-beta1" />
		
		<PackageReference Include="Hl7.Fhir.Support" Version="2.0.0-beta1" />
		<PackageReference Include="Hl7.Fhir.Serialization" Version="2.0.0-beta1" />
	</ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net45' ">
    <PackageReference Include="System.Memory" Version="4.5.2" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Net.Http.WebRequest.dll" />
  </ItemGroup>
  
</Project>
