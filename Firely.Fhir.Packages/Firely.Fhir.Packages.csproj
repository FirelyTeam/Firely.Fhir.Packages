<Project Sdk="Microsoft.NET.Sdk">


	<Import Project="..\Firely.Fhir.Packages.props" />

	<PropertyGroup Condition="'$(Configuration)' == 'Debug' ">
		<TargetFrameworks>netstandard2.0</TargetFrameworks>
	</PropertyGroup>
	
	<PropertyGroup Condition="'$(Configuration)' == 'Release' ">
		<TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
	</PropertyGroup>

	<PropertyGroup>
		<Nullable>annotations</Nullable>
		<Version>2.1.0-alpha1</Version>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	</PropertyGroup>

  <ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
		<PackageReference Include="SharpZipLib" Version="1.1.0" />
		<PackageReference Include="SemanticVersioning" Version="1.2.0" />
		<PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.2" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' != 'net45' ">
		<PackageReference Include="System.Memory" Version="4.5.2" />
		<PackageReference Include="System.Net.Http" Version="4.3.4" />
	</ItemGroup>
	<ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
		<Reference Include="System.Net.Http" />
		<Reference Include="System.Net.Http.WebRequest.dll" />
	</ItemGroup>


	<ItemGroup>
    <PackageReference Include="Hl7.Fhir.Support.Poco" Version="$(FhirNetSdkVersion)" />
    <PackageReference Include="Hl7.FhirPath" Version="$(FhirNetSdkVersion)" />
		<PackageReference Include="Hl7.Fhir.Support" Version="$(FhirNetSdkVersion)" />
		<PackageReference Include="Hl7.Fhir.Serialization" Version="$(FhirNetSdkVersion)" />
	</ItemGroup>
</Project>
